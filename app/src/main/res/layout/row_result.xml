<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:layout_marginTop="3dp"
        card_view:cardBackgroundColor="#aed6f1"
        card_view:cardCornerRadius="4dp"
        android:clickable="true"
        android:focusable="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_id"
                android:layout_toRightOf="@id/tv_id"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tv_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_name"
                android:layout_toRightOf="@id/tv_name"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tv_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_latitude"
                android:layout_toRightOf="@id/tv_latitude"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tv_num_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_longitude"
                android:layout_toRightOf="@id/tv_longitude"
                android:layout_marginTop="2dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>